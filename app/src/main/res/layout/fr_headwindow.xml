<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_Main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout2"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="193dp"
            android:layout_height="45dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintEnd_toStartOf="@+id/button"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="212dp"
            android:layout_height="57dp"
            android:ems="10"
            android:hint="dd.mm.yyyy"
            android:inputType="date"
            app:layout_constraintBottom_toTopOf="@+id/editTextTime2"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextTime"
            android:layout_width="212dp"
            android:layout_height="60dp"
            android:layout_marginTop="112dp"
            android:ems="10"
            android:hint="Ennen xx:yy"
            android:inputType="time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextMovie"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/editTextMovie"
            android:layout_width="216dp"
            android:layout_height="72dp"
            android:layout_marginEnd="60dp"
            android:ems="10"
            android:hint="Elokuvan nimi"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/editTextDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            app:layout_constraintVertical_bias="0.596" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTime" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/seekBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextTime2"
            android:layout_width="219dp"
            android:layout_height="89dp"
            android:ems="10"
            android:hint="JÃ¤lkeen xx:yy"
            android:inputType="time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hae"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="86dp"
            android:layout_height="24dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextTime2"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewStars"
            android:layout_width="72dp"
            android:layout_height="34dp"
            android:text="Stars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>